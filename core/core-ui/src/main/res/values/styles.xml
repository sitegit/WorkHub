<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:background">@drawable/bottom_nav_background</item>
        <item name="itemActiveIndicatorStyle">@color/blue</item>
        <item name="itemIconTint">@color/bottom_nav_icon_color_selector</item>
        <item name="itemTextColor">@color/bottom_nav_icon_color_selector</item>
        <item name="itemTextAppearanceActiveBoldEnabled">false</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextStyle</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemRippleColor">@color/transparent</item>
        <item name="itemBackground">@color/transparent</item>
    </style>

    <style name="BottomNavigationTextStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>